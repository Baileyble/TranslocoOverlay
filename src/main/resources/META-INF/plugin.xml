<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.baileyble.TranslocoOverlay</id>
    <name>Transloco Overlay</name>
    <vendor url="https://github.com/Baileyble">Baileyble</vendor>

    <description><![CDATA[
        <p>Provides hover-to-view and inline editing for Transloco translation keys in Angular templates.</p>

        <h3>Features</h3>
        <ul>
            <li>Hover over translation keys to see their values</li>
            <li>Ctrl+Click to navigate to JSON translation files</li>
            <li>Ctrl+Shift+Click to open translation editor dialog</li>
            <li>Edit all language translations in one dialog</li>
            <li>Google Translate integration for auto-translation</li>
            <li>Create new translation keys that don't exist yet</li>
            <li>Autocomplete for translation keys</li>
            <li>Toggle inline translation preview (Ctrl+Alt+T)</li>
        </ul>

        <h3>Supported Patterns</h3>
        <ul>
            <li><code>{{ 'key' | transloco }}</code></li>
            <li><code>[transloco]="'key'"</code></li>
            <li><code>transloco="key"</code></li>
            <li><code>t('key')</code> with <code>*transloco</code> directive</li>
        </ul>
    ]]></description>

    <!-- Platform and plugin dependencies -->
    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Goto declaration handler for Ctrl+Click navigation -->
        <gotoDeclarationHandler
                implementation="com.baileyble.translocooverlay.TranslocoGotoDeclarationHandler"
                order="first"/>

        <!-- Reference contributor for references -->
        <psi.referenceContributor
                implementation="com.baileyble.translocooverlay.TranslocoReferenceContributor"/>

        <!-- Documentation provider for hover tooltips -->
        <documentationProvider implementation="com.baileyble.translocooverlay.TranslocoDocumentationProvider"/>

        <!-- Completion contributor for autocomplete -->
        <completion.contributor
                language="any"
                implementationClass="com.baileyble.translocooverlay.TranslocoCompletionContributor"/>

        <!-- Editor factory listener for Ctrl+Shift+Click editing -->
        <editorFactoryListener
                implementation="com.baileyble.translocooverlay.TranslocoEditorFactoryListener"/>

        <!-- Inlay hints provider for showing translations inline (declarative API) -->
        <codeInsight.declarativeInlayProvider
                language="HTML"
                implementationClass="com.baileyble.translocooverlay.TranslocoInlayHintsProvider"
                providerId="transloco.inlay.hints"
                isEnabledByDefault="true"
                group="VALUES"/>

        <!-- Project service for toggle state -->
        <projectService
                serviceImplementation="com.baileyble.translocooverlay.TranslocoTranslationToggleService"/>
    </extensions>

    <!-- Actions -->
    <actions>
        <!-- Toggle action in Tools menu -->
        <action id="Transloco.ToggleTranslations"
                class="com.baileyble.translocooverlay.TranslocoToggleTranslationsAction"
                text="Show Transloco Translations"
                description="Toggle inline display of translation values">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt T"/>
        </action>

        <!-- Also add to editor popup menu -->
        <action id="Transloco.ToggleTranslationsPopup"
                class="com.baileyble.translocooverlay.TranslocoToggleTranslationsAction"
                text="Show Transloco Translations"
                description="Toggle inline display of translation values">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
